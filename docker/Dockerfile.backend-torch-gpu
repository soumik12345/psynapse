FROM pytorch/pytorch:2.9.1-cuda12.6-cudnn9-runtime

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy project files
COPY pyproject.toml uv.lock README.md ./
COPY psynapse_backend ./psynapse_backend
COPY nodepacks ./nodepacks
COPY .git ./.git

# Install uv for faster dependency management
RUN pip install --no-cache-dir uv

# Build argument for optional dependencies (e.g., "llm" or "llm,backend")
ARG OPTIONAL_DEPS=""

# Install dependencies using uv
RUN if [ -z "$OPTIONAL_DEPS" ]; then \
        uv pip install --system -e .; \
    else \
        uv pip install --system -e ".[$OPTIONAL_DEPS]"; \
    fi

# Expose the backend port
EXPOSE 8000

# Default command (can be overridden in docker-compose)
CMD ["psynapse-backend", "run", "--host", "0.0.0.0", "--port", "8000"]
